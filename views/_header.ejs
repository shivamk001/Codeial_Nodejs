<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <header>Page Header
        <ul>
            <% if (locals.user){ %>
                <li><%= user.name %></li>
                <li>
                    <a href="/users/signout">Sign Out</a>
                </li>
            <% }else{ %>
                <li>
                    <a href="/users/signin">Sign In</a>
                </li>
                <li>
                    <a href="/users/signup">Sign Up</a>
                </li>
            <% } %>
        </ul>
    </header>
</body>
</html>