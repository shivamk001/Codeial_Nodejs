<link rel="stylesheet" href="/css/user_profile.css">
<title><%= title %></title>

<img src="<%= user.avatar %>" alt="<%= user.name %>" width="100">

<% if(user.id==profile_user.id){ %>
    <h4>Form</h4>
    <form action="/users/update-profile" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" placeholder="Edit Name" value="<%= profile_user.name %>">
        <input type="email" name="email" placeholder="Edit Email" value="<%= profile_user.email %>">
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="password" name="password" placeholder="Edit Password">
        <input type="password" name="confirm_password" placeholder="Confirm Password">
        <input type="submit" value="Submit">
    </form>

<% } %>
